/ {
    bus485: serial@40005000 {
        compatible = "custom,bus485";
        label = "bus485";  // Обязательно!
        uart = <&uart0>;
        de-re-gpios = <&gpio0 12 1>;
        pre-delay-us = <100>;
        post-delay-us = <100>;
        current-speed = <115200>;
        status = "okay";
    };
};